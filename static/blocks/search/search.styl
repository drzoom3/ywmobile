.search {
    padding: 5px 10px;
    font-size: 0;
    position: relative;
    
    &__input-wrap {
        padding-right: 70px;
        display: inline-block;
        width: 100%;
        margin-right: -71px;
        vertical-align: top;
        font-size: 14px;
        position: relative;
    }
    
    &__input {
        width: 100%;
        height: 40px;
        line-height: 40px;
        padding: 0 40px 0 10px;
        border: 1px solid #d2d2d2;
        background: #FFF;
        border-radius: 0;
        box-shadow: none;
        -webkit-appearance: none;
    }
    
    &__clear {
        width: 40px;
        height: 40px;
        background: url('../images/search-clear.png') center center no-repeat;
        background-size: 12px 12px;
        position: absolute;
        right: 70px;
        top: 0;
        display: block;
        z-index: 5;
    }
    
    &__submit {
        font-size: 14px;
        height: 40px;
        line-height: 40px;
        border: 1px solid #d2d2d2;
        border-radius: 0 5px 5px 0;
        background: #FFF;
        padding: 0 5px;
        text-align: center;
        width: 70px;
        vertical-align: top; 
        z-index: 6;
        position: relative;
        
        &:hover,
        &:focus {
            background: #fafafa;
            position: relative;
            color: #000;
        }
    }
}