.tabs {
    font-size: 0;
    color: #000;
    border-radius: 4px;
    display: block;    
    margin: 0;
    padding: 0;
    
    &-block {
        padding: 10px;
    }
    
    &__item {
        display: inline-block;
        font-size: 14px;
        background: #FFF;
        border: 1px solid #CCC;
        margin: 0 -1px 0 0;
        vertical-align: top;
        padding: 0;
        width: 33.333%;
        text-align: center;
        
        &:first-child {
            border-top-left-radius: 4px;
            border-bottom-left-radius: 4px;
            overflow: hidden;
        }
        &:last-child {
            border-top-right-radius: 4px;
            border-bottom-right-radius: 4px;
            overflow: hidden;
        }
        
        
        
        &.active:hover,
        &.active:focus,
        &.active {
            border: 1px solid #DBC794;
            position: relative;
            color: #000000;
        }
    }
    
    &__link {
        display: block;
        padding: 7px 14px;
        background: #FFF;
        vertical-align: top;
        color: #000;
        
        &:hover,
        &:focus {
            background: #FAFAFA;
            text-decoration: none;
            color: #000;
        }
        
        .active &:hover,
        .active &:focus,
        .active & {
            background: #FFEAAE;
            position: relative;
            color: #000;
        } 
    }
    
    &-panel {
        display: none;
        padding: 15px 0;
        
        &.active {
            display:block;
        }
    }
}