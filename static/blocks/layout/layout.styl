html {
    position: relative;
    min-height: 100%;
    min-width: 280px;
}

body {
    margin: 0;
    padding: 0;
    background: white;
    font-family: Arial, Helvetica, sans-serif;
    margin-bottom: 135px;
    font-size: 13px;
    min-width: 280px;
}

* {
    box-sizing: border-box;
}

a {
    
    color: #0670c1;
    text-decoration: none;
    
    &:hover {
        text-decoration: underline;
        color: #FF1500;
    }
}

.hide {
    display: none;
}
.fade {
    display: none;
}
.fade.active {
    display: block;
}
