.header {
    padding: 10px;
    border-top: 1px solid #b2b2b2;
    border-bottom: 1px solid #d9d9d9;
    
    &__logo {
        display: inline-block;
        vertical-align: top;
        height: 27px;
        line-height: 27px;
    }
    
    &__category {
        text-decoration: none;
        color: #000;
        padding: 0 7px 0 10px;
        background-color: #FFF;        
        position: relative;
        height: 27px;
        line-height: 24px;
        border: 2px solid #FFCA00;
        border-right-style: none;
        display: inline-block;
        margin: 0 10px;
        vertical-align: top;
        padding: 0 7px 0 10px;

        &:hover {
            color: #F00;
        }

        &:before {
            position: absolute;
            content: '';
            width: 0;
            height: 0;
            right: -9px;
            border-color: rgba(0, 0, 0, 0) rgba(0, 0, 0, 0) rgba(0, 0, 0, 0) #FC0;
            border-width: 14px 0 13px 9px;
            border-style: solid;
            top: -2px;
        }

        &:after {
            position: absolute;
            content: '';
            width: 0;
            height: 0;
            top: 1px;
            right: -7px;
            border-color: rgba(0, 0, 0, 0) rgba(0, 0, 0, 0) rgba(0, 0, 0, 0) #FFF;
            border-width: 11px 0 10px 7px;
            border-style: solid;
            -moz-border-end-style: dotted;
            z-index: 1;
        }
    }
}